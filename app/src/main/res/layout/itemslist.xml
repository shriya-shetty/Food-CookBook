<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mpage_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/mpage_conatiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/mpage_image_lay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/mpage_food_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/itemlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/favourite"
            android:layout_toRightOf="@+id/mpage_image_lay"
            android:layout_toStartOf="@+id/favourite"
            tools:ignore="UnknownId">

            <TextView
                android:id="@+id/mpage_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Name: Spicy Arrabiata Penne"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/mpage_food_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Category: Vegetarian"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/mpage_food_area_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Area: Italian"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/unmarked"
            android:layout_marginHorizontal="20dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            app:tint="#D8D8D8"
            android:src="@drawable/ic_baseline_favorite_24"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/mpage_conatiner"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="#B1B1B1" />

</RelativeLayout>